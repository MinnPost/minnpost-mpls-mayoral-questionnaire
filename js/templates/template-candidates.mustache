<div class="question-menu grid-20">
  <div class="question-menu-inner">
    <h5>Questions</h5>

    <ul>
      {{#questions:q}}
        <li><a href="#question-{{ id }}">{{ shortname }}</a></li>
      {{/questions}}
    </ul>

    <h5>Candidates</h5>

    <ul>
      {{#candidates:c}}
        <li>({{ starred }}) {{ candidate }}</li>
      {{/candidates}}
    </ul>
  </div>
</div>

<div class="candidates-questions-answers grid-80">
  {{#questions:q}}
    <div class="question grid-100 grid-parent" id="question-{{ id }}">
      <p class="question-text"><span class="question-title">{{ shortname }}:</span> {{ question }}</p>

      {{#answers:a}}
        <div class="answer grid-50">
          <div class="answer-inner">
            <div class="answer-image"></div>
            <div class="star {{ (starred) ? 'starred' : '' }}" on-tap="star:q:a">â˜…</div>

            <h5>{{ candidate }}</h5>

            <p class="answer-text">{{ answer }}</p>
          </div>
        </div>
      {{/answers}}
    </div>
  {{/questions}}
</div>