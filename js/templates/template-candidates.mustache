<div class="candidates-questions-answers">

  {{#questions:q}}
    <div class="question grid-100 grid-parent">
      <h3>{{ shortname }}</h3>
      <p>{{ question }}</p>

      {{#answers:a}}
        <div class="answer grid-50">
          <div class="answer-inner">
            <h4>{{ candidate }}</h4>
            <p>{{ answer }}</p>
          </div>
        </div>
      {{/answers}}
    </div>
  {{/questions}}

</div>